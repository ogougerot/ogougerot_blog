                                            Retour à l'accueil
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <input formnovalidate type="submit" class="btn btn-primary w-100 shadow" value="S'inscrire">
                        </div>
                    {{form_end(registrationForm)}}

                    {# Links #}
                    {# <div class="text-center mt-3">
                        <p>Vous avez déjà un compte? <a href="{{path('app_login')}}">Connectez-vous</a></p>
                        <p><a href="{{path('app_visitor_welcome')}}">Retour à l'accueil</a></p>
                    </div> #}
                </div>
            </div>
        </div>
    </body>
</html>
















