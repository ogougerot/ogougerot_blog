{% extends "themes/base_admin.html.twig" %}

{% block title %}Modifier mon profil{% endblock %}

{% block description %}Modifier mon profil{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier mon profil</h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="edit_profile_form_firstName">Nom</label>
                        <div class="text-danger">{{form_errors(form.userName)}}</div>
                        {{form_widget(form.userName, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="edit_profile_form_email">Email</label>
                        <div class="text-danger">{{form_errors(form.email)}}</div>
                        {{form_widget(form.email, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div>
                        <input formnovalidate type="submit" class="btn btn-primary">
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}