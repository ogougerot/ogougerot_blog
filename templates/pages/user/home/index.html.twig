{% extends "themes/base_user.html.twig" %}

{% block title %}{% endblock %}

{% block description %}Accueil{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">{{app.user.userName}}</h1>

    <div class="container my-5">
        <div class="row">
            <div class="col-md-6">
                <div class="card text-bg-light mb-3">
                    <div class="card-header">Liste des commentaires</div>
                    <div class="card-body">
                        <p class="card-title">{{ app.user.comments|length }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-bg-light mb-3">
                        <div class="card-header">Liste des likes</div>
                        <div class="card-body">
                            <p class="card-title">{{ app.user.likes|length }}</p>
                        </div>
                    </div>
                </div>
        </div>
    </div>

{% endblock %}