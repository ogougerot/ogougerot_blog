                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{path('app_user_home')}}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{path('app_user_profile_index')}}">Mon profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{path('app_admin_home')}}">Espace admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_visitor_welcome')}}">Retour au site</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_logout')}}">DÃ©connexion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        {# Main #}
        <main>
            {% block main %}{% endblock %}
        </main>

        {# Footer #}
        <footer class="text-center">
            <span>DWWM</span>
        </footer>
    </body>
</html>