<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}{% endblock %} Screen|Verse</title>
        <meta name="description" content="{% block description %}{% endblock %}">

        <meta name="robots" content="index, follow">
        <meta name="author" content="ogougerot">
        <meta name="publisher" content="DWWM">

        {# Google Fonts #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Pacifico&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">

        {# Favicon #}
        <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="manifest" href="/site.webmanifest" />

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="body-visitor">
        {# NavBar #}
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{path('app_visitor_welcome')}}">Screen|Verse</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{path('app_visitor_welcome')}}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_visitor_welcome')}}#about-me">Actualités</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_visitor_blog_index')}}">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_visitor_community_create')}}">Communauté</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="my-1 mx-lg-2 btn btn-outline-primary shadow" aria-current="page" href="{{path('app_admin_home')}}">Espace admin</a>
                            </li>
                            {% endif %}
                                {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="my-1 mx-lg-2 btn btn-outline-primary shadow" aria-current="page" href="{{path('app_user_home')}}">Espace utilisateur</a>
                            </li>
                            {% endif %}

                            <li class="nav-item">
                                <a class="my-1 mx-lg-2 btn btn-primary shadow" aria-current="page" href="{{path('app_logout')}}">Deconnexion</a>
                            </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="my-1 mx-lg-2 btn btn-outline-primary shadow" aria-current="page" href="{{path('app_login')}}">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="my-1 mx-lg-2 btn btn-primary shadow" href="{{path('app_register')}}">Inscription</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        {# Main #}
        <main>
            {% block main %}{% endblock %}
        </main>
        
        {# Footer #}
        <footer class="text-center">
            <span>DWWM</span>
        </footer>
    </body>
</html>